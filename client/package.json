{
    "name": "SimpleTwitter-Client",
    "version": "0.0.0",
    "description": "The simple twitter client",
    "main": "server.js",
    "browserify": {
        "transform": [
            ["reactify", {
                "harmony": true
            }]
        ]
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "supervisor -i node_modules -e js,jsx server.js",
        "build": "NODE_ENV=production browserify ./ | uglifyjs -cm 2>/dev/null > ./assets/bundle.js",
        "start-prod": "NODE_ENV=production node server.js",
        "clean": "rm -f ./assets/bundle.js"
    },
    "author": "Florian Krauthan",
    "license": "MIT",
    "dependencies": {
        "body-parser": "~1.9.0",
        "express": "~4.9.5",
        "morgan": "~1.3.1",
        "response-time": "~2.2.0",
        "node-jsx": "~0.11.0",
        "browserify": "~5.12.1"
    },
    "devDependencies": {
        "reactify": "~0.14.0",
        "errorhandler": "~1.2.0",
        "supervisor": "^0.6.0"
    }
}

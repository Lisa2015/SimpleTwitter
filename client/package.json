{
    "name": "SimpleTwitter-Client",
    "version": "0.0.0",
    "description": "The simple twitter client",
    "main": "server.js",
    "browserify": {
        "transform": [
            ["reactify", {
                "harmony": true
            }]
        ]
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "supervisor -i node_modules -e js,jsx server.js",
        "build": "NODE_ENV=production browserify ./ | uglifyjs -cm 2>/dev/null > ./assets/bundle.js",
        "start-prod": "NODE_ENV=production node server.js",
        "clean": "rm -f ./assets/bundle.js"
    },
    "author": "Florian Krauthan",
    "license": "MIT",
    "dependencies": {
        "body-parser": "^1.5.0",
        "express": "^4.6.0",
        "morgan": "^1.2.0",
        "response-time": "^2.0.0",
        "node-jsx": "^0.10.0",
        "browserify": "~3.44.2"
    },
    "devDependencies": {
        "reactify": "~0.13.1",
        "errorhandler": "^1.1.1",
        "supervisor": "^0.6.0"
    }
}

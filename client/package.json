{
  "name": "SimpleTwitter-Client",
  "version": "0.0.0",
  "description": "",
  "author": "Florian Krauthan",
  "license": "MIT",
  "main": "dist/server",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "supervisor dist/server",
    "build-server": "webpack --verbose --colors --display-error-details --config webpack.server.js",
    "build-client": "npm run prepare-assets && webpack --verbose --colors --display-error-details --config webpack.client.js",
    "build": "concurrent 'npm run build-client' 'npm run build-server'",
    "watch-server": "webpack --verbose --colors --display-error-details --watch --config webpack.server-watch.js",
    "watch-client": "npm run prepare-assets && webpack --verbose --colors --display-error-details --config webpack.client-watch.js && webpack-dev-server --config webpack.client-watch.js --port 2080",
    "watch": "concurrent --kill-others 'npm run watch-client' 'npm run watch-server' 'npm run start'",
    "prepare-assets": "./prepare_assets.sh"
  },
  "engines": {
      "node": ">= 0.11.16",
      "iojs": ">= 1.0.0"
  },
  "engine-strict": true,
  "dependencies": {
      "hapi": "8.4.0",
      "yar": "3.0.3",
      "react": "0.12.2",
      "react-a11y": "0.0.6",
      "react-bootstrap": "0.17.0",
      "react-router-component": "0.24.2",
      "react-document-title": "1.0.2",
      "react-lensed-state": "0.1.2",
      "flummox": "2.13.2",
      "handlebars": "3.0.0",
      "superagent": "0.19.0",
      "validatorjs": "1.2.1",
      "good": "5.1.2",
      "good-console": "4.1.0"
  },
  "devDependencies": {
      "webpack": "1.7.3",
      "webpack-dev-server": "1.7.0",
      "supervisor": "0.6.0",
      "json-loader": "0.5.1",
      "babel": "4.7.12",
      "babel-core": "4.7.12",
      "babel-loader": "4.2.0",
      "babel-runtime": "4.7.12",
      "react-hot-loader": "1.2.3",
      "concurrently": "0.0.5",
      "bower": "1.3.12"
  }
}

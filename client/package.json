{
  "name": "SimpleTwitter-Client",
  "version": "0.0.0",
  "description": "The simple twitter client",
  "main": "server.js",
  "browser": "client.js",
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "harmony": true
        }
      ]
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "supervisor -i node_modules -e js,jsx server.js",
    "build": "NODE_ENV=production browserify ./ | uglifyjs -cm 2>/dev/null > ./assets/bundle.js",
    "start-prod": "NODE_ENV=production node server.js",
    "clean": "rm -f ./assets/bundle.js"
  },
  "author": "Florian Krauthan",
  "license": "MIT",
  "dependencies": {
    "body-parser": "~1.9.0",
    "browserify": "~4.2.3",
    "express": "~4.9.5",
    "express-session": "~1.8.2",
    "fluxy": "~0.4.1",
    "http-proxy": "~1.4.3",
    "morgan": "~1.3.1",
    "node-jsx": "~0.11.0",
    "oauth": "~0.9.12",
    "react": "~0.11.2",
    "react-bootstrap": "~0.12.0",
    "react-router-component": "~0.20.1",
    "response-time": "~2.2.0",
    "superagent": "~0.19.0"
  },
  "devDependencies": {
    "reactify": "~0.14.0",
    "errorhandler": "~1.2.0",
    "supervisor": "^0.6.0",
    "connect-browserify": "~3.2.1"
  }
}
